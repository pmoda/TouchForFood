@model TouchForFood.Models.menu_item
@using TouchForFood.App_GlobalResources

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>menu_item</legend>

        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.version)

        <div class="editor-label">
            @Html.LabelFor(model => model.item_id, "item")
        </div>
        <div class="editor-field">
            @Html.DropDownList("item_id", String.Empty)
            @Html.ValidationMessageFor(model => model.item_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.menu_category_id, "menu_category")
        </div>
        <div class="editor-field">
            @Html.DropDownList("menu_category_id", String.Empty)
            @Html.ValidationMessageFor(model => model.menu_category_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.price)
            @Html.ValidationMessageFor(model => model.price)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
