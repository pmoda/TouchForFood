@model TouchForFood.Models.review_order_item
@using TouchForFood.App_GlobalResources

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>review_order_item</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.rating)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rating)
            @Html.ValidationMessageFor(model => model.rating)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.review_text)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.review_text)
            @Html.ValidationMessageFor(model => model.review_text)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.order_item_id, "order_item")
        </div>
        <div class="editor-field">
            @Html.DropDownList("order_item_id", String.Empty)
            @Html.ValidationMessageFor(model => model.order_item_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.review_id, "review")
        </div>
        <div class="editor-field">
            @Html.DropDownList("review_id", String.Empty)
            @Html.ValidationMessageFor(model => model.review_id)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
