@model IDictionary<DateTime, TouchForFood.Models.table>
@using TouchForFood.App_GlobalResources

@{
    ViewBag.Title = "Manage";
}

<script src="@Url.Content("~/Scripts/Order/order.js")" type="text/javascript"></script>




<div class="one-third column">

    <h3 class="main-green">Manage Orders</h3>

    @foreach (var item in Model.OrderBy(i => i.Key))
    {
        <h4>
            @if (item.Value.id == (int)ViewBag.table_id)
            {  
                @Html.ActionLink("" + item.Value.name, "ManageIndex", new { id = item.Value.id }, new { @class = "table-number food-menu-button isactive-menu-button" })
            }
            else
            {
                @Html.ActionLink("" + item.Value.name, "ManageIndex", new { id = item.Value.id }, new { @class = "table-number food-menu-button food-menu-button-size" })
            }
        </h4>
    }    

</div>

<div class="two-thirds column">
    @Html.Action("FilterOrder", "Order", (TouchForFood.Models.table)ViewBag.table)
@*    @Html.Partial("../Order/Index/" + (int)ViewBag.table_id , new ViewDataDictionary { { "tag", "div" } })*@
</div>

<div class="clear"></div>