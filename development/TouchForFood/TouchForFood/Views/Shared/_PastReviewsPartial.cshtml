@model IEnumerable<TouchForFood.Models.review_order_item>

@foreach (var item in Model)
{
    <div class="review-container">
        <div class="reviewDate">
            @*@Html.LabelFor(modelItem => item.submitted_on): @Html.DisplayFor(modelItem => item.submitted_on)*@
        </div>
        <div class="reviewUserName main-green">
            @* Make a link to the restaurant's details *@
            @* @Html.ActionLink(item.restaurant.name, "Details", "Restaurant", new { id = item.restaurant_id }, null)  *@                
            @if (item.review.is_anonymous)
            {
                <b>Anonymous <span class="go-right">@item.rating / 5</span></b> 
            }
            else
            {                    
                <b>@item.review.user.first_name <span class="go-right">@item.rating / 5</span></b> 
            }
        </div>
        <div class="reviewText">
            @*@Html.LabelFor(modelItem => item.review_text)*@ @Html.DisplayFor(modelItem => item.review_text)
        </div>
        <div class="review-date main-blue">
            @*@Html.LabelFor(modelItem => item.rating)*@ @Html.DisplayFor(modelItem => item.submitted_on)
        </div>
    </div>
    <br/>
}
