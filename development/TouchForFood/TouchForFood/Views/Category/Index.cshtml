@model IEnumerable<TouchForFood.Models.category>
@using TouchForFood.App_GlobalResources

@{
    ViewBag.Title = "Category Manager";
}

<div class="sixteen columns"> 
    <h3 class="main-green go-left">Category Manager</h3>

</div>
<div class="one-third column">  
<div class="food-menu-delete"></div>     
    <h4>
        @Html.ActionLink("+ New Category", "Create", null, new { @class = "food-menu-button food-menu-button-size" })
    </h4>
</div> 
 
@foreach (var item in Model)
{
    <div class="one-third column">    
        <div class="food-menu-delete">
            <a href="@Url.Content("Category/Delete/" + item.id)"> 
            <img src="@Url.Content("~/Content/images/trash.png")" alt="HTML tutorial" width="22" height="22"></a>
        </div>         

        <h4>        
            @Html.ActionLink(item.name, "Details", new { id = item.id }, new { @class = "food-menu-button isactive-menu-button" })
        </h4>
    </div>  

}