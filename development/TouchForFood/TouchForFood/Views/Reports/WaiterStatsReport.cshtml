@model IEnumerable<TouchForFood.ViewModels.WaiterStatsViewModel>
@using TouchForFood.App_GlobalResources

<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/altrows.js")" type="text/javascript"></script>

<table onload="setDates()" class="altrowstable" id="alternatecolor">
    <tr>
        <th>
           Restuarant 
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Completed Orders
        </th>       
    </tr>
@foreach (var item in Model)
{
    <tr>
    <td>@Html.DisplayFor(model => item.restoName)</td>

    <td>@Html.DisplayFor(model => item.waiterFirstName)</td>

    <td>@Html.DisplayFor(model => item.waiterLastName)</td>

    <td>@Html.DisplayFor(model => item.completedOrders)</td>
    </tr>
}
</table>

