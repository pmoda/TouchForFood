@model TouchForFood.ViewModels.WaiterStatsViewModel
@using TouchForFood.App_GlobalResources
@using TouchForFood.Util.User
@using TouchForFood.Util.Security

@{
    ViewBag.Title = "Generate Report";
}
<link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/Reports/report.js")" type="text/javascript"></script>

<h2 class="main-green">Generate Most Popular dish Report</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    TouchForFood.Models.user authUser = UserUtil.getAuthenticatedUser(Request);
    if (authUser.user_role == (int)SiteRoles.Admin ||
             authUser.user_role == (int)SiteRoles.Developer ||
             authUser.user_role == (int)SiteRoles.Restaurant)
    {            
            <div class="editor-field">
                @Html.LabelFor(model => model.restoId, "Restuarant")
                @Html.DropDownList("restoId", "Select a restuarant")
                @Html.ValidationMessageFor(model => model.restoId)
            </div>
            <div class="editor-field">
                @Html.LabelFor(model => model.startDate, "From:")
                @Html.TextBoxFor(model => model.startDate, new { @class = "date" })
                @Html.ValidationMessageFor(model => model.startDate)
            </div>
             <div class="editor-field">
             @Html.LabelFor(model => model.endDate, "To:")
                @Html.TextBoxFor(model => model.endDate, new { @class = "date" })
                @Html.ValidationMessageFor(model => model.endDate)
            </div>
           <br/>
           <input type="submit" value="Create" />
        
      }
       
       
}



